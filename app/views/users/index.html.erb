<div class="top-border"></div>

  <div class="wrap">

    <header class="full-head">
      <h1>The Sitter Club</h1>
    </header>

    <div class="slider-txt">
        <%= image_tag "seba.png", :class => "head-shot" %>
        <p class="page-title">Welcome back <%= @user.family_name %></p>
    </div>

    <% flash.each do |name, msg| %>
      <%= content_tag :div, msg, class: "flash #{name}" %>
    <% end %>

    <div class="sign-up-login">
      <%= link_to "I need a Hand", users_search_path, :method => :search, :class =>"submit" %>
      <p>-OR-</p>
      <%= link_to "I'm available to Help",  "/users/#{current_user.id}/timeslots/new", :class => "submit" %>
    </div>


<div>
<% @active_friends.each do |friend| %>
  <p>Available friends in your network:</p>
  <%= friend.family_name %>
<% end  %>
</div>

