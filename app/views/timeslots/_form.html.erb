<%= form_for ([:user, @timeslot]) do |f| %>
  <div class="field">
    <%= f.label :start_time %><br>
    <%= f.datetime_local_field :start_time %>
  </div>
  <div class="field">
    <%= f.label :duration_in_hours %><br>
    <%= f.number_field :duration %>
  </div>
  <div class="field">
    <%= f.label :Number_of_kids_? %><br>
    <%= f.number_field :availability %>
  </div>
 <div class="field">
    <%= f.label :kind, "Sitting", :value => "Sitting"  %>
    <%= f.radio_button :kind, "Sitting"%>
    <%= f.label :kind, "Sitter", :value => "Sitter" %>
    <%= f.radio_button :kind, "Sitter", :checked => true %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

<% if @timeslot.errors.any? %>
  <ul class="Signup_Errors">
  <% for message_error in @timeslot.errors.full_messages %>
    <li>* <%= message_error %></li>
  <% end %>
  </ul>
<% end %>