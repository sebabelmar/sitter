<h1 style="margin-top:40px;margin-bottom:30px;"> Time Slots:</h1>
<% flash.each do |name, msg| %>
  <%= content_tag :div, msg, class: "flash #{name}" %>
<% end %>

<%= render 'form' %>

<h2 style="margin-top:30px;font-size:21px;text-transform:uppercase;">Your availability</h2>
<table style="width:100%; font-size:18px;">
  <tr>
    <th>Date</th>
    <th>Time</th>
    <th>Duration</th>
    <th>Availability</th>
  </tr>
<% @timeslots.each do |timeslot| %>
  <tr>
    <td><%= Time.at(timeslot.start_time).to_s.split.first %></td>
    <td><%= Time.at(timeslot.start_time).to_s.split[1] %></td>
    <td><%= timeslot.duration %></td>
    <td><%= timeslot.availability %></td>s
  </tr>
<% end %>

